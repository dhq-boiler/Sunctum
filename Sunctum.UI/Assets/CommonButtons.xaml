<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Sunctum.UI.ResourceDictionaries">
    <Style x:Key="StandardButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="100" />
        <Setter Property="Height" Value="30" />
    </Style>
    <Style
        x:Key="RightBottomCommandButtonStyle"
        BasedOn="{StaticResource StandardButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="0,10,10,10" />
    </Style>
    <Style
        x:Key="LeftBottomCommandButtonStyle"
        BasedOn="{StaticResource StandardButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="10,10,0,10" />
    </Style>
    <Style
        x:Key="OKButtonStyle"
        BasedOn="{StaticResource RightBottomCommandButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="IsDefault" Value="True" />
    </Style>
    <Style
        x:Key="CancelCloseButtonStyle"
        BasedOn="{StaticResource RightBottomCommandButtonStyle}"
        TargetType="{x:Type Button}">
        <Setter Property="IsCancel" Value="True" />
    </Style>
</ResourceDictionary>