<Window
    x:Class="Sunctum.UI.Dialogs.InputPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sunctum.UI.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="InputPassword"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <StackPanel>
        <Label>このライブラリは暗号化されています。閲覧するにはパスワードが必要です。</Label>
        <Label>パスワードを入力して下さい。</Label>
        <PasswordBox
            x:Name="password"
            Margin="10"
            IsTabStop="True"
            KeyDown="password_KeyDown"
            PasswordChar="●" />
        <Button
            x:Name="OKButton"
            Margin="10"
            Click="Button_Click"
            Content="OK"
            IsTabStop="True" />
    </StackPanel>
</Window>
